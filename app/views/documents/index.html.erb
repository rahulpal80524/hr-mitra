<div class="col-lg-12">
  <%= flash[:notice]%>
  <div class="card rounded-0 mt-5 md-5">
    <div class="card-body">
      <h2 class="text-center">List of Documents</h2>
    </div>
  </div>
  <%= link_to "Add New Document", new_document_path, class: "btn btn-primary btn-lg mb-4 mt-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Document Type</th>
        <th>Employee ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document|%>
        <tr>
          <td><%= link_to document.name, employee_path(document.employee) %></td>
          <td><%= document.doc_type%></td>
          <td><%= document.employee_id%></td>
          <td>
          <%= link_to "Edit", edit_document_path(document), class: "btn btn-primary" %>
          <%= link_to "Show", document_path(document), class: "btn btn-primary" %>
          <%= link_to "Delete", document_path(document), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure to delete this document?'} %>
          <%#= link_to "Delete", employee_path(employee), data: { 'method': :delete, 'confirm': "Are you sure?" } %>

          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>