<div class="col-lg-12">
  <%= flash[:notice]%>
  <div class="card rounded-0 mt-5 md-5">
    <div class="card-body">
      <h2 class="text-center">List of employees</h2>
    </div>
  </div>
  <%= link_to "Add New Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4 mt-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee|%>
        <tr>
          <td><%= employee.name%></td>
          <td><%= employee.email%></td>
          <td><%= employee.phone_number%></td>
          <td><%= employee.city%></td>
          <td><%= employee.state%></td>
          <td>
          <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-primary" %>
          <%= link_to "Show", employee_path(employee), class: "btn btn-primary" %>
          <%= link_to "Delete", employee_path(employee), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure to delete this employee?'} %>
          <%#= link_to "Delete", employee_path(employee), data: { 'method': :delete, 'confirm': "Are you sure?" } %>

          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>