<div class="col-lg-12">
  <div class="card rounded-0 mt-5 md-5">
    <div class="card-body">
      <h2 class="text-center">Employee Details</h2>
    </div>
  </div>
  <%= link_to "Add New Employee", new_employee_path, class: "btn btn-primary btn-lg mb-4 mt-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @employee.name%></td>
          <td><%= @employee.email%></td>
          <td><%= @employee.phone_number%></td>
          <td><%= @employee.city%></td>
          <td><%= @employee.state%></td>
          <td>
          <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-primary" %>
          </td>
        </tr>
    </tbody>
    <%= link_to 'Back to Employees', employees_path, class: 'btn btn-outline-primary btn-lg rounded-0'%>
  </table>
  <%if @employee.documents.present?%>
      <div class='row mt-5'>
  <h2 class='text-center'>Employee Documents</h2>
  <% @employee.documents.each do |document|%>
    <div class='card md-4'>
     <div class='card-body'>
      <div class='row'>
        <div class='col-lg-4'>
          <%if document.image.attached?%>
            <%= image_tag document.image, class: 'img-fluid' %>
          <%end%>
        </div>
        <div class='col-lg-4'>
        <p class='lead'><%= document.name%></p>
        </div>
        <div class='col-lg-4'>
          <p class='lead'><%= document.doc_type%></p>
        </div>
      </div>
     </div>
    </div>
  <%end%>
  </div>
  <%end%>
</div>